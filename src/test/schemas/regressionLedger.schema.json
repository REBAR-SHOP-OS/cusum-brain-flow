{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RegressionLedger",
  "description": "Tracks test history, flakiness, and regression detection",
  "type": "object",
  "required": ["entries", "last_run_id", "last_run_at"],
  "properties": {
    "last_run_id": { "type": "string" },
    "last_run_at": { "type": "string", "format": "date-time" },
    "total_tests": { "type": "number" },
    "total_passed": { "type": "number" },
    "total_failed": { "type": "number" },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["test_id", "module", "scenario_name", "last_10_runs"],
        "properties": {
          "test_id": {
            "type": "string",
            "pattern": "^[A-Z]+-\\d+-",
            "description": "Format: MOD-###-short_slug (e.g., DSH-001-company_scoping)"
          },
          "module": {
            "type": "string",
            "enum": ["dashboard", "customers", "crm", "orders", "deliveries", "production", "machines", "timeclock", "social", "inventory", "team"]
          },
          "scenario_name": { "type": "string" },
          "last_10_runs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["pass", "timestamp"],
              "properties": {
                "pass": { "type": "boolean" },
                "timestamp": { "type": "string", "format": "date-time" },
                "run_id": { "type": "string" },
                "duration_ms": { "type": "number" }
              }
            },
            "maxItems": 10
          },
          "flakiness_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Ratio of failures to total runs (0 = always passes, 1 = always fails)"
          },
          "linked_bugs": {
            "type": "array",
            "items": { "type": "string" }
          },
          "last_passed": {
            "type": ["string", "null"],
            "format": "date-time"
          },
          "last_failed": {
            "type": ["string", "null"],
            "format": "date-time"
          }
        }
      }
    }
  }
}
